<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="330dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_events"
    app:cardBackgroundColor="@color/colorBluetrans"
    app:cardCornerRadius="24dp"
    app:cardElevation="1dp"
    android:layout_margin="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="18dp"
        app:cardElevation="0dp"
        android:layout_margin="8dp"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:scaleType="centerCrop"
            android:src="@drawable/image1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/background"
            android:background="@drawable/gradient_backtext_news"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/type"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/colorWhite"
                android:lines="1"
                android:text="@string/event"
                android:padding="10dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical"
                app:tint="@color/colorWhite"
                app:srcCompat="@drawable/ic_fi_sr_bookmark"
                android:contentDescription="@string/image_notebook_discription" />
        </LinearLayout>

    </RelativeLayout>

    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>