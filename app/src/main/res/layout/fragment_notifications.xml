        <ImageView
            android:id="@+id/object"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/custom_background_progress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_play_button"
            android:layout_alignParentStart="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:elevation="2dp"
            app:tint="@color/colorWhite"/>

    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="60dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="20dp"
        android:elevation="2dp"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/text_prog_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="100%"
            android:textColor="@color/textmainHeader1"
            android:gravity="center"
            android:focusable="false"
            android:textSize="18sp"/>

    </androidx.cardview.widget.CardView>

    </RelativeLayout>







    <LinearLayout
        android:id="@+id/parent_for_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/top_anim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/topcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:layout_margin="16dp"
            android:elevation="3dp"
            android:padding="16dp"
            app:cardCornerRadius="12dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <androidx.cardview.widget.CardView
                   android:id="@+id/topcard_map"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:elevation="3dp"
                   android:padding="16dp"
                   app:cardCornerRadius="12dp">

                    <com.yandex.mapkit.mapview.MapView
                        android:id="@+id/mapview_tasks_main"
                        android:layout_width="match_parent"
                        android:layout_height="320dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/borders" />

                    </com.yandex.mapkit.mapview.MapView>

               </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/liinear_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/button_my"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom|center"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/my_tasks_main_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/my_task"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/textmainHeader1"
                        android:textSize="16sp"/>

                    <View
                        android:id="@+id/my_tasks_main_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="32dp"
                        android:background="@color/neutral1"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/button_new"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom|center"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/available_tasks_main_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/available_tasks_main"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/neutral1"
                        android:textSize="16sp"/>

                    <View
                        android:id="@+id/available_tasks_main_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="32dp"
                        android:visibility="invisible"
                        android:background="@color/neutral1"/>

                 </LinearLayout>
              </LinearLayout>
           </LinearLayout>

        </androidx.cardview.widget.CardView>

