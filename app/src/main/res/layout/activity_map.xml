<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:elevation="2dp"
        android:gravity="bottom"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/topbar_background"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/button_myevents_map"
            android:focusable="false"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_events_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/my_task"
                android:textColor="@color/textmainHeader1"
                android:textSize="16sp"/>
            <View
                android:id="@+id/line_events_map"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="12dp"
                android:background="@color/neutral1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_newevents_map"
            android:focusable="false"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_newevents_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/available_tasks_main"
                android:textColor="@color/neutral1"
                android:textSize="16sp"/>
            <View
                android:id="@+id/line_newevents_map"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="12dp"
                android:visibility="invisible"
                android:background="@color/neutral1"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/topbar_map"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/topbar_background"
        android:elevation="4dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/topbar_backpres_map"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical|end"
            android:layout_marginStart="15dp"
            android:layout_marginTop="16dp"
            android:tint="@color/colorPrimary"
            app:srcCompat="@drawable/ic_angle_left" />


        <TextView
            android:id="@+id/topbar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            android:textSize="24sp"
            android:text="@string/map_header"/>

    </RelativeLayout>

    <com.yandex.mapkit.mapview.MapView
        android:id="@+id/mapviewFull"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:layout_margin="16dp"
            android:paddingBottom="50dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="40dp">
                <ImageView
                    android:id="@+id/map_but_plus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_plus_small"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="40dp">
                <ImageView
                    android:id="@+id/map_but_minus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_minus_small"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="45dp">
                <ImageView
                    android:id="@+id/map_but_zoomout"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_home"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/invisible_rel"
        android:visibility="visible"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

        <RelativeLayout
         android:id="@+id/map_task_cardfull"
         android:layout_width="match_parent"
         android:layout_height="600dp"
         android:layout_alignParentStart="true"
         android:layout_alignTop="@+id/invisible_rel"
         android:paddingTop="-60dp"
         android:background="@drawable/botnavview_back"
         android:visibility="invisible"
         android:elevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:elevation="2dp"
                        android:layout_marginTop="16dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/task_header_map"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/task_activity_header"
                            android:textColor="@color/textmainHeader2"
                            android:textSize="16sp"
                            android:gravity="start"
                            android:layout_marginStart="24dp"
                            android:textStyle="bold"/>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="8dp"
                            android:elevation="4dp"
                            android:background="@drawable/crown_back"
                            android:layout_alignParentEnd="true">

                            <RelativeLayout
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textColor="@color/textmainHeader2"
                                    android:textSize="16sp"
                                    android:gravity="start"
                                    android:layout_marginStart="8dp"
                                    android:text="150"/>

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_copyright"
                                    android:layout_alignParentEnd="true"/>

                            </RelativeLayout>
                        </RelativeLayout>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/task_disc_map"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:textColor="@color/textmainHeader2"
                        android:textSize="16sp"
                        android:text="@string/taskactivity_body"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/colorWhite"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        app:cardCornerRadius="24dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:lineSpacingExtra="16dp"
                            android:text="@string/taskactivity_tags"
                            android:textColor="@color/textmainHeader1"/>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="8"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                app:cardCornerRadius="50dp"
                                android:layout_margin="4dp"
                                android:elevation="0dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/girl1"/>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                app:cardCornerRadius="50dp"
                                android:layout_margin="4dp"
                                android:elevation="0dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/girl2"/>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                app:cardCornerRadius="50dp"
                                android:layout_margin="4dp"
                                android:elevation="0dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/girl3"/>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                app:cardCornerRadius="50dp"
                                android:layout_margin="4dp"
                                android:elevation="0dp">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_share_earth"/>

                            </androidx.cardview.widget.CardView>

                        </RelativeLayout>

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/colorWhite"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        app:cardCornerRadius="24dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:lineSpacingExtra="16dp"
                                    android:text="@string/task_startdate_text"
                                    android:textColor="@color/textmainHeader2"
                                    android:textStyle="bold"
                                    android:textSize="16sp"/>

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/ic_calendar"
                                        android:layout_alignParentEnd="true"/>

                            </RelativeLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/text_date_taskstart"
                                android:textColor="@color/textmainHeader1"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:textSize="16sp"
                                android:layout_marginBottom="8dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/colorWhite"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="24dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:lineSpacingExtra="16dp"
                                    android:text="@string/task_start_time"
                                    android:textColor="@color/textmainHeader2"
                                    android:textStyle="bold"
                                    android:textSize="16sp"/>

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_time_check"
                                    android:layout_alignParentEnd="true"/>

                            </RelativeLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/task_start_time_body"
                                android:textColor="@color/textmainHeader1"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:textSize="16sp"
                                android:layout_marginBottom="8dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <Button
                        android:id="@+id/button_map_start"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/back_button"
                        android:text="@string/exept_button"
                        android:textColor="@color/colorWhite"/>

                </LinearLayout>

         </RelativeLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>