<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_event_header_item"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="wrap_content"
                android:text="@string/events_item_header"
                android:textColor="@color/textmainHeader2"
                android:textSize="18sp"
                android:layout_margin="8dp"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_menu_dots_vertical"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_item_main_events"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="center"
                android:src="@drawable/ecopic" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="start"
            android:textColor="@color/textmainHeader1"
            android:text="@string/events_item_disc"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="16sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/tags_item_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="1dp"
            android:gravity="center"
            android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="@string/tags_event_item"
            android:lineSpacingExtra="16dp"
            android:padding="16dp"
            android:textSize="14sp"/>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/button_ref"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/back_button"
            android:focusable="false"
            android:enabled="true"
            android:text="@string/exept_button"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/card_view_events"
        app:cardForegroundColor="@color/colorWhite"
        app:cardCornerRadius="24dp"
        app:cardElevation="1dp"
        android:alpha="0.7">

    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>
