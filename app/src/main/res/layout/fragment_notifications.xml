        <LinearLayout
            android:id="@+id/linear_my_tasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/main_tasks_backlittle"
            android:alpha=".7"
            android:layout_marginTop="-30dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:visibility="visible"
            android:elevation="2dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textmainHeader1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="start|center"
                    android:text="@string/card_title"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    android:gravity="end|center"
                    app:srcCompat="@drawable/ic_right_chevron" />

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/silver"
                android:layout_margin="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/textmainHeader1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_toStartOf="@+id/arrow2"
                    android:gravity="start|center_vertical"
                    android:text="Подстричь зеленую ограду и собрать листья"
                    />

                <ImageView
                    android:id="@+id/arrow2"
                    android:layout_width="wrap_content"
                    android:layout_height="18sp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="end"
                    android:layout_marginEnd="20dp"
                    android:gravity="end|center_vertical"
                    app:srcCompat="@drawable/ic_right_chevron" />

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/silver"
                android:layout_margin="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/textmainHeader1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_toStartOf="@+id/arrow3"
                    android:gravity="start|center_vertical"
                    android:text="Подстричь зеленую ограду и собрать листья"
                    />

                <ImageView
                    android:id="@+id/arrow3"
                    android:layout_width="wrap_content"
                    android:layout_height="18sp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="end"
                    android:layout_marginEnd="20dp"
                    android:gravity="end|center_vertical"
                    app:srcCompat="@drawable/ic_right_chevron" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_new_tasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/main_tasks_backlittle"
            android:alpha=".7"
            android:layout_marginTop="-30dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:visibility="gone"
            android:elevation="2dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textmainHeader1"
                    android:layout_marginBottom="20dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="start|center"
                    android:text="В вашем районе заданий нет"/>

            </RelativeLayout>


        </LinearLayout>




    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>